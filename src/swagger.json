  "paths": {
    "/usuarios": {
      "post": {
        "summary": "Criar usuário",
        "description": "Cria um novo usuário",
        "tags": ["Usuários"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "senha": {
                    "type": "string",
                    "minLength": 8
                  },
                  "nome": {
                    "type": "string",
                    "maxLength": 100
                  },
                  "cpf": {
                    "type": "string",
                    "pattern": "^[0-9]{11}$"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["USER", "ADMIN"]
                  }
                },
                "required": ["email", "senha", "nome", "cpf"]
              },
              "example": {
                "email": "usuario@example.com",
                "senha": "senha@123A",
                "nome": "Nome do Usuário",
                "cpf": "12345678901",
                "role": "USER"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "usuarioId": {
                          "type": "integer",
                          "format": "int64"
                        },
                        "nome": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string",
                          "format": "email"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "data": {
                    "usuarioId": 1,
                    "nome": "Nome do Usuário",
                    "email": "usuario@example.com"
                  },
                  "token": "token-super-aleatorio",
                  "msg": "Usuário criado com sucesso"
                }
              }
            }
          },
          "400": {
            "description": "Dados obrigatórios não foram preenchidos, Email ou CPF já cadastrados, Email inválido, Senha inválida, ou CPF inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Dados obrigatórios não foram preenchidos, Email ou CPF já cadastrados, Email inválido, Senha inválida, ou CPF inválido"
                }
              }
            }
          }
        }
      }
    },
    "/usuarios/login": {
      "post": {
        "summary": "Logar Usuário no sistema",
        "description": "Logar Usuário no sistema",
        "tags": ["Usuários"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "maxLength": 100
                  },
                  "senha": {
                    "type": "string",
                    "maxLength": 100
                  }
                },
                "required": [
                  "nome",
                  "descricao",
                  "preco",
                  "quantidadeDisponivel",
                  "categoria"
                ]
              },
              "example": {
                "email": "Pedro@admin.com",
                "senha": "aabbCC@10"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "msg": {
                      "type": "string"
                    }
                  },
                  "required": ["token", "msg"]
                },
                "example": {
                  "token": "token-super-aleatorio",
                  "msg": "Login realizado com sucesso"
                }
              }
            }
          },
          "400": {
            "description": "Dados obrigatórios não foram preenchidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Dados obrigatórios não foram preenchidos"
                }
              }
            }
          },
          "401": {
            "description": "Login ou a senha estão incorretos, rota não autorizada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Login ou a senha estão incorretos, rota não autorizada"
                }
              }
            }
          }
        }
      }
    },

    "/produtos": {
      "get": {
        "summary": "Listar Produtos",
        "description": "Listar Produtos",
        "tags": ["Produtos"],
        "responses": {
