      "post": {
        "summary": "Criar Produto",
        "description": "Criar um novo produto",
        "tags": ["Produtos"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "maxLength": 100
                  },
                  "descricao": {
                    "type": "string",
                    "maxLength": 4000
                  },
                  "preco": {
                    "type": "number",
                    "format": "double"
                  },
                  "quantidadeDisponivel": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "categoria": {
                    "type": "string",
                    "maxLength": 50
                  }
                },
                "required": [
                  "nome",
                  "descricao",
                  "preco",
                  "quantidadeDisponivel",
                  "categoria"
                ]
              },
              "example": {
                "nome": "Produto Teste",
                "descricao": "Descrição do Produto Teste",
                "preco": 10.0,
                "quantidadeDisponivel": 10,
                "categoria": "Categoria Teste"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Produto"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "data": {
                    "id": 1,
                    "nome": "Produto Teste",
                    "descricao": "Descrição do Produto Teste",
                    "preco": 10.0,
                    "categoria": "Categoria Teste",
                    "estoqueId": 1
                  },
                  "msg": "Produto criado com sucesso"
                }
              }
            }
          },
          "400": {
            "description": "Dados obrigatórios não foram preenchidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Dados obrigatórios não foram preenchidos"
                }
              }
            }
          },
          "403": {
            "description": "Você não tem permissão para criar um produto, somente administradores podem criar produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Você não tem permissão para criar um produto, somente administradores podem criar produtos"
                }
              }
            }
          },
          "404": {
            "description": "Usuário Admin não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "msg": "Usuário não encontrado"
                }
              }
            }
          }
        }
      }
    },
